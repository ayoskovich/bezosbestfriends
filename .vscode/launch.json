{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Run App (Windows)",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/venv/Scripts/python",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/dashboard",
            "program": "app.py",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ]
        },
        {
            "name": "Run App (Mac)",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "program": "app.py",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ]
        },

    ]
}